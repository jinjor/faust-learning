{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../public/assets/js",
    "target": "es2015",
    "module": "es2015",
    "allowJs": false,
    "types": [],
    "pretty": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "preserveWatchOutput": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["dom", "es2015"]
  },
  "include": ["**/*"],
  "exclude": []
}
